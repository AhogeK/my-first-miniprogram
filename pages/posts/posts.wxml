<!-- pages/posts/posts.wxml -->
<view>
  <swiper indicator-dots autoplay circular interval="3000">
    <swiper-item wx:for="{{ postList }}" wx:key="*this">
      <!-- 插槽 -->
      <image src="{{ item.headImgSrc }}" />
    </swiper-item>
  </swiper>
  <block wx:for="{{ postList }}" wx:key="*this">
    <view bind:tap="onJumpToDetail" class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{ item.avatar }}" />
        <text class="post-date">{{ tem.date }}</text>
      </view>
      <text class="post-title">{{ item.title }}</text>
      <image class="post-image" src="{{ item.imgSrc }}" />
      <text class="post-content">{{ item.content }}</text>
      <view class="post-like">
        <!-- <image class="post-like-image" src="https://ahogek-oss.oss-cn-hangzhou.aliyuncs.com/blog-img/v3-2020-images-icon-chat.png" /> -->
        <l-icon class="post-like-image" color="#666" size="28" name="favor" />
        <text class="post-like-font">{{ item.collection }}</text>
        <!-- <image class="post-like-image" src="https://ahogek-oss.oss-cn-hangzhou.aliyuncs.com/blog-img/v3-2020-images-icon-view.png" /> -->
        <l-icon class="post-like-image" color="#666" size="32" name="eye" />
        <text class="post-like-font">{{ item.reading }}</text>
      </view>
    </view>
  </block>
</view>